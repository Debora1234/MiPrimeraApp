<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/textviewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textviewHeaderText"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/resultadosLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/textosLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/resultadosLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTexto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTextoTexto1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewTexto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTextoTexto2"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewTexto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTextoTexto3"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewTexto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTextoTexto4"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewTexto5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTextoTexto5"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewTexto6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewTextoTexto6"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resultadosLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/textosLayout"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewRandom1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewRandomText1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewRandom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewRandomText2"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textViewRandom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewRandomText3"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/textViewRandom4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewRandomText4"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/textViewRandom5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewRandomText5"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/textViewRandom6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewRandomText6"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </LinearLayout>



    <Button
        android:id="@+id/buttonSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSecondText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadosLayout"
        android:elevation="44444dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>